# Django Configuration
DEBUG=False
SECRET_KEY=generate-a-secure-secret-key-here

# Database - Neon PostgreSQL Connection String
# Format: postgresql://[user]:[password]@[host]/[database]?sslmode=require
DATABASE_URL=postgresql://user:password@ep-xxxxx.us-east-2.aws.neon.tech/dbname?sslmode=require

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=your-backend-domain.com,localhost,127.0.0.1

# CORS Origins (comma-separated frontend URLs)
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app,http://localhost:3000

# CSRF Trusted Origins (comma-separated, include https://)
CSRF_TRUSTED_ORIGINS=https://your-frontend-domain.vercel.app,http://localhost:3000
